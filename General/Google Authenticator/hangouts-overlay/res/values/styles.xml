<?xml version="1.0" encoding="utf-8"?>
<!--You are editing Google Authenticator's Styles-->

<resources>
    <style name="AuthenticatorTheme" parent="@android:style/Theme.Material">
        <item name="accountListWithVerificationCodes">@style/AccountListWithVerificationCodes</item>
        <item name="accountListWithVerificationCodesRow">@style/AccountListWithVerificationCodesRow</item>
        <item name="accountListWithVerificationCodesRowIssuer">@style/AccountListWithVerificationCodesRowIssuer</item>
        <item name="accountListWithVerificationCodesRowVerificationCode">@style/AccountListWithVerificationCodesRowVerificationCode</item>
        <item name="accountListWithVerificationCodesRowCountdownIndicator">@style/AccountListWithVerificationCodesRowCountdownIndicator</item>
        <item name="accountListWithVerificationCodesRowAccountName">@style/AccountListWithVerificationCodesRowAccountName</item>
        <item name="wizardButtonBarStyle">@style/WizardButtonBar</item>
        <item name="directionalButtonLeftStyle">@style/DirectionalButtonLeft</item>
        <item name="directionalButtonRightStyle">@style/DirectionalButtonRight</item>
        <item name="enrollmentWizardDividerHorizontal">@drawable/divider_dark</item>
        <item name="selectableItemBackground">@android:drawable/list_selector_background</item>
    </style>
    <style name="AuthenticatorTheme.NoTitleBar" parent="@style/AuthenticatorTheme">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AuthenticatorTheme.Translucent.NoTitleBar" parent="@android:style/Theme.Material.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AccountListWithVerificationCodes">
        <item name="android:dividerHeight">1.0dip</item>
    </style>
    <style name="AccountListWithVerificationCodesRow" />
    <style name="AccountListWithVerificationCodesRowIssuer">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>
    <style name="AccountListWithVerificationCodesRowVerificationCode">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textSize">40.0sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    <style name="AccountListWithVerificationCodesRowCountdownIndicator">
        <item name="color">@android:color/white</item>
    </style>
    <style name="AccountListWithVerificationCodesRowAccountName">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">?android:textColorTertiary</item>
    </style>
    <style name="WizardButtonBar" parent="@android:style/ButtonBar">
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>
    <style name="DirectionalButtonLeft">
        <item name="android:drawableLeft">@drawable/ic_btn_back</item>
    </style>
    <style name="DirectionalButtonRight">
        <item name="android:drawableRight">@drawable/ic_btn_next</item>
    </style>
</resources>
