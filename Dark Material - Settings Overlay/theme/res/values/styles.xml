<?xml version="1.0" encoding="utf-8"?>
<!--You are editing Settings' Styles-->

<resources>
	<!--ActionBar Theme, add background attr here to add a drawable bg to use as header-->
		<style name="Theme.ActionBar" parent="@android:style/Widget.Material.ActionBar.Solid">
			<item name="android:contentInsetStart">16.0dip</item>
		</style>
		
	<!--Style of main settings, do not replace with Theme.Settings as this prevents Settings FC-->
		<style name="Theme.SettingsBase" parent="@android:style/Theme.Material">
			<item name="android:colorBackground">@android:color/black</item>
			<item name="android:colorForeground">@android:color/transparent</item>
			<item name="android:colorPrimary">#ff212021</item>
			<item name="android:colorPrimaryDark">#ff212021</item>
			<item name="android:fastScrollTextColor">@android:color/white</item>
			<item name="android:windowBackground">@android:color/black</item>
		</style>
		
	<!--About phone and Status windows, do not remove SubSettingsDialogWhenLarge as parent has been changed-->
		<style name="Theme.AlertDialog" parent="@android:style/Theme.Material.Dialog.Alert" />		
		<style name="Theme.SubSettingsDialogWhenLarge" parent="@style/Theme.SettingsBase" />
		<style name="Theme.DialogWhenLarge" parent="@android:style/Theme.Material.DialogWhenLarge" />
		
	<!--Wifi dialog and popup texts-->
	    <style name="Theme.Light.WifiDialog" parent="@android:style/Theme.Material.Light.Dialog.Alert" />
		<style name="wifi_item_label">
			<item name="android:textColor">#ffffffff</item>
		</style>
		<style name="wifi_item_content">
			<item name="android:textColor">#ffffffff</item>
		</style>
		<style name="wifi_item_edit_content">
			<item name="android:textColor">#ffffffff</item>
		</style>
	
	<!--Bluetooth dialog and popup texts-->
		<style name="bt_item">
			<item name="android:textColor">#ffffffff</item>
		</style>
		<style name="bt_item_label">
			<item name="android:textColor">#ffffffff</item>
		</style>
		<style name="bt_item_edit_content">
			<item name="android:textColor">#ffffffff</item>
		</style>
		
	<!--Setup Wizards-->
		<style name="SetupWizardTheme.Light" parent="android:style/Theme.Material.NoActionBar" />
</resources>
